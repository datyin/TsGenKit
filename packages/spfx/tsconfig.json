{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "./node_modules",
    "./dist",
    "./src/**/*.spec.ts",
    "./src/**/*.test.ts",
    "./src/**/examples/**/*",
  ]
}
